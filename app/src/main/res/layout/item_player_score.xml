<!-- item_player_score.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Player Name TextView -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Score EditText -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextScore"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:hint="Score"
            android:inputType="number" />

    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmitScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

    <!-- Total score TextView -->
    <TextView
        android:id="@+id/textViewTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_score"
        android:layout_marginStart="16dp"/>

    <!-- Total score EditText -->
    <EditText
        android:id="@+id/editTextTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:enabled="false" />

</LinearLayout>
